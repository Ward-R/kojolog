<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-11"> <%# Increased width to col-lg-10, col-md-11 %>
      <div class="card p-5 shadow-lg border-0 rounded-lg">
        <h2 class="text-center mb-2 font-weight-bold">Add New Log Entry</h2>
        <h3 class="text-center text-muted mb-5">
          for <span class="text-primary"><%= @log.unit.name %></span>
          <br>
          <small class="d-block mt-1">
            (<%= @log.date.strftime("%B %d, %Y") %> - <%= @log.shift_type %>)
          </small>
        </h3>
        <%= simple_form_for([@log, @log_entry]) do |f| %>
          <%= f.error_notification class: "alert alert-danger mb-4" %>
          <div class="form-inputs">
            <div class="mb-4">
              <%= f.input :section_identifier, label: "Entry Title / Section", input_html: { class: "form-control form-control-lg" } %>
            </div>
            <div class="mb-4">
              <%= f.label :content, "Entry Content", class: "form-label fs-5 mb-2" %>
              <%= f.rich_text_area :content %>
            </div>
            <div class="mb-5">
              <%= f.input :entry_type,
                          collection: LogEntry.entry_types.keys.map { |k| [k.humanize, k] },
                          as: :select,
                          label: "Entry Type",
                          input_html: { class: "form-select form-select-lg" },
                          prompt: "Select Entry Type" %>
            </div>
          </div>
          <div class="form-actions text-center">
            <%= f.submit "Create Log Entry", class: "btn btn-primary btn-lg me-3" %>
            <%= link_to "Back to Log", log_path(@log), class: "btn btn-outline-secondary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
