<h1>Add New Log Entry for <%= @log.title %></h1>
<%= simple_form_for([@log, @log_entry]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :section_identifier, label: "Title" %>
    <%= f.input :content, as: :text %>
    <%= f.input :entry_type, collection: LogEntry.entry_types.keys.map { |k| [k.humanize, k] }, as: :select %>
  </div>
  <div class="form-actions">
    <%= f.submit "Create log Entry", class: "btn btn-info" %>
  </div>
<% end %>
<%= link_to "Back to Log", log_path(@log) %>
