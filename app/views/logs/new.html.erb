<%= simple_form_for [@unit, @log] do |f| %>  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :date,
                as: :date,
                html5: true,
                required: true,
                start_year: Date.current.year - 5,
                end_year: Date.current.year + 1 %>
    <%= f.input :shift_type,
                collection: ['Day Shift', 'Night Shift'],
                prompt: "Select your shift...",
                required: true,
                as: :select %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Create Log", class: "btn btn-info"%>
  </div>
<% end %>
