<h2>Logs</h2>
<p><%= link_to "Create New Log", new_unit_log_path(@unit), class: "btn btn-primary" %></p>
<% if @unit.logs.any? %>
  <ul>
    <% @unit.logs.each do |log| %>
      <li>
        <%= log.created_at.strftime("%Y-%m-%d %H:%M") %> -
        <%= link_to "Log #{log.unit.name} (#{log.shift_type} shift on #{log.date.strftime("%Y-%m-%d")})", log_path(log) %>
      </li>
    <% end %>
  </ul>
  <p><%= link_to "Back to Units", units_path, class: "btn btn-info" %></p>
<% else %>
  <p>No recent logs to display yet. Start by creating a new log!</p>
<% end %>
<hr>
